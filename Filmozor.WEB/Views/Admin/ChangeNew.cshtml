
@{
    ViewBag.Title = "NewForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/Content/admin-style.css">
</head>
<title>Изменение новости</title>
Изменение новости

@using (Html.BeginForm("ChangeNewL", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input hidden="hidden" name="id" value="@ViewBag.id" />
    <table>
        <tr><td>Заголовок </td><td><input required type="text" name="title" value="@ViewBag.New.title" /></td></tr>
        <tr><td>Текст новости </td><td><input required type="text" name="description" value="@ViewBag.New.description" /></td></tr>
        <tr><td>Аватар </td><td><input type="file" name="avatar" /></td></tr>
        <tr><td>Дата публикации</td><td><input required type="datetime-local" name="date_of_publication" /></td></tr>
        <tr><td></td><td><input type="submit" value="Изменить" /></td></tr>
    </table>
}

